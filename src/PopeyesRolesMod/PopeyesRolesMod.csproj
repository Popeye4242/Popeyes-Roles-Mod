<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup Label=".Net">
    <TargetFramework>netstandard2.1</TargetFramework>
    <Version>1.1.0</Version>
    <Description>Popeyes Roles Mod for Among Us</Description>
    <Authors>Patrick Spiegel</Authors>
  </PropertyGroup>
  
  <PropertyGroup Label="Reactor">
    <GameVersion>2021.3.31.3s</GameVersion>
    <Mappings>NuclearPowered/Mappings:0.3.0</Mappings>
  </PropertyGroup>
  
  <PropertyGroup Label="Build">
    <OutputPath>..\..\build</OutputPath>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>CodeSigningCertificate.pfx</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  
  <ItemGroup>
    <Deobfuscate Include="$(AmongUs)\BepInEx\plugins\Reactor-$(GameVersion).dll" />
    <Deobfuscate Include="$(AmongUs)\BepInEx\plugins\Essentials-$(GameVersion).dll" />
    
    <PackageReference Include="Reactor.OxygenFilter.MSBuild" Version="0.3.0" /> 
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>


  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>


  <ItemGroup>
    <Folder Include="Roles\Crewmate\" />
  </ItemGroup>

  <Target Name="Copy" AfterTargets="Reobfuscate">
    <Copy SourceFiles="$(OutputPath)reobfuscated/$(AssemblyName)-$(GameVersion).dll" DestinationFolder="$(AmongUs)/BepInEx/plugins/" Condition="'$(Configuration)' == 'Debug'" />
  </Target>
</Project>